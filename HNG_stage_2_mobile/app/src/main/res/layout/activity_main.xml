<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:hint="Your full name Here"
        android:textColorHint="#808080"
        android:inputType="textCapWords"
        android:textColor="#222121"
        android:minHeight="48dp"
        android:importantForAutofill="no" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/display_button"
        android:text="Display"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textColor="#5A5959"
        android:textSize="16sp"
        android:text="This application is developed by Lawson Adesayo and powered by"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <ImageView
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:id="@+id/i4g_logo"
            android:src="@drawable/i4g_logo"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:id="@+id/zuri_img"
            android:src="@drawable/zuri_logo"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>


        <ImageView
            android:layout_width="86dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:id="@+id/hng_logo"
            android:src="@drawable/hng_logo"
            android:background="?attr/selectableItemBackground"
            />

    </LinearLayout>


</LinearLayout>